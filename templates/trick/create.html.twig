{% extends 'base.html.twig' %}

{% block title %}
	Créer un Trick
{% endblock %}

{% block body %}
	<section class="container my-5">
		<div class="form-group row">
			<div class"col">
				<h2 class="text-center h3 mb-3 font-weight-normal">SnowTricks - Créer un trick</h2>

				<div class="col-lg-8 mx-auto">
					{{ form_start(trickForm) }}
					<div class="mb-3">
						{{ form_row(trickForm.name) }}
					</div>
					<div class="mb-3">
						{{ form_row(trickForm.content) }}
					</div>

					<p>Ajouter des categories</p>
					<div class="mb-3">
						{{ form_row(trickForm.category) }}
					</div>

					<p>Ajouter des images</p>
					<div class="mb-3">
						{{ form_row(trickForm.pictures) }}
					</div>

					<p>Ajouter un video</p>

					<button type="button" class="add_link_video" data-collection-holder-class="video">Ajouter un video</button>
					<ul id="videos" class="videos" data-prototype="{{ form_widget(trickForm.videos.vars.prototype)|e('html_attr') }}">
						
						
							<li> {{ form_row(trickForm.videos) }} </li>
				
					</ul>
					
					<div class="d-grid gap-2 col-3 mx-auto my-5">
						<button type="submit" class="btn btn-lg btn-primary mt-3" style="background-color: #45637d;">Ajouter un trick</button>
					</div>
					{{ form_end(trickForm) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}



